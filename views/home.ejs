<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <form action="/create" method="post">
        <input name="task" type="text" id="task-name" class="form-input" placeholder="Type your task name here"/>
        <textarea name="taskdetails" class="form-textarea" id="task-details" placeholder="type your task here"></textarea>
        <button type="submit" class="form-btn">Submit task</button>
    </form>
    
    <div class="tasks">
        <% if(files.length > 0){ %>
            <% files.forEach(function(val){ %>
                <div class="task">
                    <h2><%= val %></h2>
                    <div class="editread">
                        <a href="./files/<%=val%>" class="read-more">read more.</a>
                        <a href="/edit/<%=val%>" class="edit">Edit</a>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h3 class="no">No files to show</h3>
        <% } %>
    </div>




    <script src="/Javascript/script.js"></script>
</body>
</html>